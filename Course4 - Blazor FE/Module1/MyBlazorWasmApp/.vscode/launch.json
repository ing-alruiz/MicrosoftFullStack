    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch and Debug with Hot Reload",
            "type": "blazorwasm",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "dotnet watch run",
            "browser": "chrome"
        },
        {
            "name": "Attach to Blazor",
            "type": "blazorwasm",
            "request": "attach",
            "url": "http://localhost:5177"
        }
    ]
}
